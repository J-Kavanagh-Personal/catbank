<p style="color: green"><%= notice %></p>

<h1>Transactions</h1>

<div id="transactions">
  <% @transactions.each do |transaction| %>
    <p>
      <strong>Payee:</strong>
      <%= transaction.payee_id %>
    </p>

    <p>
      <strong>Amount in Silveuros:</strong>
      <%= number_to_currency(transaction.amount_in_pennies.to_f / 100) %>
    </p>

    <p>
      <%= link_to "Show this transaction", balance_transaction_path(id: transaction.id) %>
    </p>
  <% end %>
</div>

<%= link_to "New transaction", new_balance_transaction_path %>

<%= link_to "Balance", balance_path(id: params[:balance_id]) %>
